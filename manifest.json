{
    "manifest_version": 3,
    "name": "Record LMS",
    "version": "2024.12.18",
    "description": "The extension developed by @syluu records the questions and selected answers during tests on the LMS ICTU.",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "64": "icons/icon64.png",
            "128": "icons/icon128.png"
        }
    },
    "options_page": "shows/shows.html",
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "storage",
        "clipboardWrite",
        "clipboardRead"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://lms.ictu.edu.vn/*",
                "http://lms.ictu.edu.vn/*"
            ],
            "js": [
                "content/content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
    }
}